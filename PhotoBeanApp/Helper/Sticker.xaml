<UserControl x:Class="PhotoBeanApp.Helper.Sticker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoBeanApp.Helper"
             mc:Ignorable="d" 
             MouseMove="UserControl_MouseMove"
         x:Name="sticker">
    <Grid>
        <Image x:Name="stickerImage" Height="60"/>
        <Button x:Name="removeSticker" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Click="removeSticker_Click"/>
    </Grid>
</UserControl>
