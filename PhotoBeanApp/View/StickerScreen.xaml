<UserControl x:Class="PhotoBeanApp.View.FrameScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoBeanApp.View"
             mc:Ignorable="d" 
              Background="#8EE1F8" Height="463" Width="773">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas Name="canvasSticker" Grid.Column="0" AllowDrop="True" Background="Transparent" DragOver="canvas_DragOver" >

        </Canvas>
        <Label x:Name="positionX" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Left"></Label>
        <Label x:Name="positionY" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Label>
        <Grid Grid.Column="1">
            <WrapPanel Name="stickers" Margin="20" Height="350" Width="300">
            </WrapPanel>
            <Button Name="ContinueButton" Content="Tiếp tục" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Click="ContinueButton_Click" />
        </Grid>
    </Grid>
</UserControl>  
