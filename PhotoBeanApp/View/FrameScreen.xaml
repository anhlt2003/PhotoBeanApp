<UserControl x:Class="PhotoBeanApp.View.FrameScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoBeanApp.View"
             mc:Ignorable="d" 
              Background="#8EE1F8" >
    <Grid Background="#8EE1F8" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Name="LeftGrid" Grid.Column="0">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Image Name="Photo"/>
            </Grid>
        </Grid>
        <Grid Name="RightGrid" Grid.Column="1">
            <Label Content="Frame" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
            <Grid Name="frames" Margin="20">
            </Grid>
            <Button Name="ContinueButton" Content="Tiếp tục" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Click="ContinueButton_Click" />
        </Grid>
    </Grid>
</UserControl>  
